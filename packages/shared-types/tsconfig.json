{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "declaration": true, // Generate .d.ts files
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}