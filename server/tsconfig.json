{
  "compilerOptions": {
    "target": "ES2016", // Or newer target
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true // If you import JSON files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}